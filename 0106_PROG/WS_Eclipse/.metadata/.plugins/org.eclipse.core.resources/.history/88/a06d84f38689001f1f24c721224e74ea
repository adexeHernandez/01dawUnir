package algoritmos;

public class Ejercicio03AlternativasIf {

	public static void main(String[] args) {
		int edad = 18;
		
		// Solo if una sola sentencia
		
		if (edad >= 18)
			System.out.println("Mayor de edad");
			
		// Solo if mas de una sentencia
			
		if (edad >=  18) {
			System.out.println("MAYOR de edad");
			System.out.println("y eres adulto");
		}
		
		// rama if y rama else solo una sentencia
		
		if (edad >= 18)
			System.out.println("Ya eres mayor de edad");
		else
			System.out.println("Todavia eres menor de edad");
		
		System.out.println("FIN DE PROGRAMA");
		
	}

}
