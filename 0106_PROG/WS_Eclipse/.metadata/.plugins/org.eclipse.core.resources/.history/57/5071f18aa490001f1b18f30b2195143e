package actividad01;

import java.util.Scanner;

public class ActividadPrimeraProgramacion {

	public static void main(String[] args) {
		/*Pedir una nota de 0 a 10 y mostrarla de la forma: Insuficiente, Suficiente, Bien, 
		 * Notable y sobresaliente. Si la nota introducida no está en el rango
		 *  mostrar el mensaje “Nota errónea”.
		 */
		
		 Scanner leerNota = new Scanner(System.in);
		 int nota = 0;
		 
		 System.out.println("Dime que nota te ha cascado Tomas :");
		 nota = leerNota.nextInt();
		 
		 if (nota >= 9)
				 System.out.println("Tu nota es un sobresaliente");
		 else (nota >= 8)
		 		System.out.println("Tienes un Notable");
	}

}
